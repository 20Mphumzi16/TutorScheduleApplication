{"ast":null,"code":"import { getCart, updateCart } from '@/services/cartService';\nexport default {\n  name: 'CartSummary',\n  props: {\n    cartId: {\n      type: String,\n      required: true\n    }\n  },\n  data() {\n    return {\n      cartItems: [],\n      cartTotal: 0\n    };\n  },\n  async mounted() {\n    await this.fetchCartItems();\n  },\n  methods: {\n    async fetchCartItems() {\n      try {\n        const response = await getCart(2);\n        console.log('Comic books:', response.data.comicBooks);\n        const cartData = response.data;\n\n        // Set cart items and store the entire cart data\n        this.cartItems = cartData.comicBooks;\n        this.cart = cartData; // Store the full cart data to be used for updates\n        this.cartTotal = cartData.comicBooks.reduce((total, item) => total + item.price, 0);\n      } catch (error) {\n        console.error('Error fetching cart items:', error);\n      }\n    },\n    getPhotoUrl(photo) {\n      // Prepend the base64 image data with the correct data URI scheme for an image\n      return `data:image/jpeg;base64,${photo}`;\n    },\n    async removeItem(sku) {\n      // Show confirmation dialog\n      const isConfirmed = confirm('Are you sure you want to remove this item from the cart?');\n      if (isConfirmed) {\n        const itemIndex = this.cartItems.findIndex(item => item.sku === sku);\n        if (itemIndex > -1) {\n          // Remove the item from the cartItems array\n          this.cartItems.splice(itemIndex, 1);\n\n          // Update the cart total\n          this.cartTotal = this.cartItems.reduce((total, item) => total + item.price, 0);\n\n          // Update the comicBooks list in the cart object\n          this.cart.comicBooks = this.cartItems;\n          this.cart.updatedDate = new Date().toISOString().split('T')[0];\n          // Send the updated full cart to the server\n          try {\n            console.log(this.cart);\n            await updateCart(this.cart); // Send the entire cart object\n            console.log('Cart updated successfully');\n          } catch (error) {\n            console.error('Error updating cart:', error);\n          }\n        }\n      }\n    }\n  }\n};","map":{"version":3,"names":["getCart","updateCart","name","props","cartId","type","String","required","data","cartItems","cartTotal","mounted","fetchCartItems","methods","response","console","log","comicBooks","cartData","cart","reduce","total","item","price","error","getPhotoUrl","photo","removeItem","sku","isConfirmed","confirm","itemIndex","findIndex","splice","updatedDate","Date","toISOString","split"],"sources":["C:\\Users\\User\\Documents\\IntelliJ Projects 2024\\comic_city_project\\src\\frontend\\src\\components\\CartSummary.vue"],"sourcesContent":["<template>\r\n  <div class=\"cart-summary\" v-if=\"cartItems.length\">\r\n    <h2>Cart</h2>\r\n    <div v-for=\"item in cartItems\" :key=\"item.sku\" class=\"cart-item\">\r\n      <!-- Remove Button -->\r\n      <div class=\"remove-item\" @click=\"removeItem(item.sku)\">×</div>\r\n\r\n      <!-- Item Image -->\r\n      <div\r\n          class=\"cart-item-image\"\r\n          :style=\"{ backgroundImage: `url(${getPhotoUrl(item.photo)})` }\"\r\n      ></div>\r\n\r\n      <!-- Item Details -->\r\n      <div class=\"cart-item-details\">\r\n        <p class=\"text-base\">{{ item.name }}</p>\r\n        <p class=\"text-sm\">{{ item.price }} • {{ item.quantity }}</p>\r\n      </div>\r\n    </div>\r\n    <div class=\"cart-footer\">\r\n      <div>\r\n        <p class=\"text-sm\">Total: R{{ cartTotal }}</p>\r\n        <p class=\"text-sm\">Items: {{ cartItems.length }}</p>\r\n      </div>\r\n      <div class=\"cart-footer-actions\">\r\n        <a href=\"#\" class=\"view-cart\">View Cart</a>\r\n        <button class=\"checkout\">Checkout</button>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { getCart, updateCart } from '@/services/cartService';\r\n\r\nexport default {\r\n  name: 'CartSummary',\r\n  props: {\r\n    cartId: {\r\n      type: String,\r\n      required: true\r\n    }\r\n  },\r\n  data() {\r\n    return {\r\n      cartItems: [],\r\n      cartTotal: 0,\r\n\r\n  };\r\n  },\r\n  async mounted() {\r\n    await this.fetchCartItems();\r\n  },\r\n  methods: {\r\n    async fetchCartItems() {\r\n      try {\r\n        const response = await getCart(2);\r\n        console.log('Comic books:', response.data.comicBooks);\r\n        const cartData = response.data;\r\n\r\n        // Set cart items and store the entire cart data\r\n        this.cartItems = cartData.comicBooks;\r\n        this.cart = cartData; // Store the full cart data to be used for updates\r\n        this.cartTotal = cartData.comicBooks.reduce(\r\n            (total, item) => total + item.price,\r\n            0\r\n        );\r\n      } catch (error) {\r\n        console.error('Error fetching cart items:', error);\r\n      }\r\n    },\r\n    getPhotoUrl(photo) {\r\n      // Prepend the base64 image data with the correct data URI scheme for an image\r\n      return `data:image/jpeg;base64,${photo}`;\r\n    },\r\n    async removeItem(sku) {\r\n      // Show confirmation dialog\r\n      const isConfirmed = confirm('Are you sure you want to remove this item from the cart?');\r\n\r\n      if (isConfirmed) {\r\n        const itemIndex = this.cartItems.findIndex(item => item.sku === sku);\r\n        if (itemIndex > -1) {\r\n          // Remove the item from the cartItems array\r\n          this.cartItems.splice(itemIndex, 1);\r\n\r\n          // Update the cart total\r\n          this.cartTotal = this.cartItems.reduce(\r\n              (total, item) => total + item.price,\r\n              0\r\n          );\r\n\r\n          // Update the comicBooks list in the cart object\r\n          this.cart.comicBooks = this.cartItems;\r\n          this.cart.updatedDate= new Date().toISOString().split('T')[0];\r\n          // Send the updated full cart to the server\r\n          try {\r\n            console.log(this.cart)\r\n            await updateCart(this.cart); // Send the entire cart object\r\n            console.log('Cart updated successfully');\r\n          } catch (error) {\r\n            console.error('Error updating cart:', error);\r\n          }\r\n        }\r\n      }\r\n    }\r\n  }\r\n\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n/* Cart Summary styles */\r\n.cart-summary {\r\n  display: block;\r\n  position: absolute;\r\n  right: 0;\r\n  top: 100%;\r\n  width: 300px;\r\n  background-color: #1e2a38;\r\n  border-radius: 8px;\r\n  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);\r\n  padding: 1rem;\r\n  z-index: 1000;\r\n}\r\n\r\n.cart-item {\r\n  display: flex;\r\n  gap: 1rem;\r\n  background-color: #2a3a4b;\r\n  padding: 0.75rem;\r\n  border-bottom: 1px solid #444;\r\n  position: relative; /* Needed for positioning the remove button */\r\n}\r\n\r\n.cart-item:last-child {\r\n  border-bottom: none;\r\n}\r\n\r\n.cart-item-image {\r\n  background-size: cover;\r\n  background-position: center;\r\n  width: 70px;\r\n  height: 70px;\r\n  border-radius: 8px;\r\n}\r\n\r\n.cart-item-details {\r\n  display: flex;\r\n  flex-direction: column;\r\n  justify-content: center;\r\n}\r\n\r\n.text-sm {\r\n  color: #a0b3c2;\r\n}\r\n\r\n.text-base {\r\n  color: #e0e0e0;\r\n}\r\n\r\n.cart-footer {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  padding: 0.75rem 0;\r\n}\r\n\r\n.cart-footer-actions {\r\n  display: flex;\r\n  flex-direction: column;\r\n  gap: 0.5rem;\r\n}\r\n\r\n.view-cart {\r\n  background-color: #2c3e50;\r\n  color: white;\r\n  text-align: center;\r\n  font-weight: bold;\r\n  padding: 0.5rem;\r\n  border-radius: 8px;\r\n  text-decoration: none;\r\n}\r\n\r\n.checkout {\r\n  background-color: #3498db;\r\n  color: white;\r\n  font-weight: bold;\r\n  padding: 0.5rem;\r\n  border-radius: 8px;\r\n  border: none;\r\n  cursor: pointer;\r\n}\r\n\r\n/* Remove Button styles */\r\n.remove-item {\r\n  position: absolute;\r\n  top: -8px;\r\n  right: -8px;\r\n  background-color: red;\r\n  color: white;\r\n  border-radius: 50%;\r\n  width: 20px;\r\n  height: 20px;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n  font-size: 16px;\r\n  cursor: pointer;\r\n}\r\n</style>\r\n"],"mappings":"AAiCA,SAASA,OAAO,EAAEC,UAAS,QAAS,wBAAwB;AAE5D,eAAe;EACbC,IAAI,EAAE,aAAa;EACnBC,KAAK,EAAE;IACLC,MAAM,EAAE;MACNC,IAAI,EAAEC,MAAM;MACZC,QAAQ,EAAE;IACZ;EACF,CAAC;EACDC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,SAAS,EAAE;IAEf,CAAC;EACD,CAAC;EACD,MAAMC,OAAOA,CAAA,EAAG;IACd,MAAM,IAAI,CAACC,cAAc,CAAC,CAAC;EAC7B,CAAC;EACDC,OAAO,EAAE;IACP,MAAMD,cAAcA,CAAA,EAAG;MACrB,IAAI;QACF,MAAME,QAAO,GAAI,MAAMd,OAAO,CAAC,CAAC,CAAC;QACjCe,OAAO,CAACC,GAAG,CAAC,cAAc,EAAEF,QAAQ,CAACN,IAAI,CAACS,UAAU,CAAC;QACrD,MAAMC,QAAO,GAAIJ,QAAQ,CAACN,IAAI;;QAE9B;QACA,IAAI,CAACC,SAAQ,GAAIS,QAAQ,CAACD,UAAU;QACpC,IAAI,CAACE,IAAG,GAAID,QAAQ,EAAE;QACtB,IAAI,CAACR,SAAQ,GAAIQ,QAAQ,CAACD,UAAU,CAACG,MAAM,CACvC,CAACC,KAAK,EAAEC,IAAI,KAAKD,KAAI,GAAIC,IAAI,CAACC,KAAK,EACnC,CACJ,CAAC;MACH,EAAE,OAAOC,KAAK,EAAE;QACdT,OAAO,CAACS,KAAK,CAAC,4BAA4B,EAAEA,KAAK,CAAC;MACpD;IACF,CAAC;IACDC,WAAWA,CAACC,KAAK,EAAE;MACjB;MACA,OAAO,0BAA0BA,KAAK,EAAE;IAC1C,CAAC;IACD,MAAMC,UAAUA,CAACC,GAAG,EAAE;MACpB;MACA,MAAMC,WAAU,GAAIC,OAAO,CAAC,0DAA0D,CAAC;MAEvF,IAAID,WAAW,EAAE;QACf,MAAME,SAAQ,GAAI,IAAI,CAACtB,SAAS,CAACuB,SAAS,CAACV,IAAG,IAAKA,IAAI,CAACM,GAAE,KAAMA,GAAG,CAAC;QACpE,IAAIG,SAAQ,GAAI,CAAC,CAAC,EAAE;UAClB;UACA,IAAI,CAACtB,SAAS,CAACwB,MAAM,CAACF,SAAS,EAAE,CAAC,CAAC;;UAEnC;UACA,IAAI,CAACrB,SAAQ,GAAI,IAAI,CAACD,SAAS,CAACW,MAAM,CAClC,CAACC,KAAK,EAAEC,IAAI,KAAKD,KAAI,GAAIC,IAAI,CAACC,KAAK,EACnC,CACJ,CAAC;;UAED;UACA,IAAI,CAACJ,IAAI,CAACF,UAAS,GAAI,IAAI,CAACR,SAAS;UACrC,IAAI,CAACU,IAAI,CAACe,WAAW,GAAE,IAAIC,IAAI,CAAC,CAAC,CAACC,WAAW,CAAC,CAAC,CAACC,KAAK,CAAC,GAAG,CAAC,CAAC,CAAC,CAAC;UAC7D;UACA,IAAI;YACFtB,OAAO,CAACC,GAAG,CAAC,IAAI,CAACG,IAAI;YACrB,MAAMlB,UAAU,CAAC,IAAI,CAACkB,IAAI,CAAC,EAAE;YAC7BJ,OAAO,CAACC,GAAG,CAAC,2BAA2B,CAAC;UAC1C,EAAE,OAAOQ,KAAK,EAAE;YACdT,OAAO,CAACS,KAAK,CAAC,sBAAsB