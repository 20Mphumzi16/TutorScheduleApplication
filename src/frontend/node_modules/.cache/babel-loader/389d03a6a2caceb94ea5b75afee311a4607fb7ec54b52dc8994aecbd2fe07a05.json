\n    <nav-bar/>\r\n    <header class=\"page-header\">\r\n    </header>\r\n    <main class=\"product-page\">\r\n      <div class=\"product-top\">\r\n        <div class=\"product-image\">\r\n          <img :src=\"comic.image\" :alt=\"comic.name\" />\r\n        </div>\r\n        <div class=\"product-description\">\r\n          <h2>{{ comic.name }}</h2>\r\n          <p><strong>Price:</strong>R{{ commic.price }}</p>\r\n          <p>{{ comic.description }}</p>\r\n\r\n<!--          <div class=\"add-to-wishList\">-->\r\n<!--            <font-awesome-icon icon=\"heart\"/>-->\r\n<!--          </div>--> <!--- ask team do we need it-->\r\n\r\n          <!-- start of the form -->\r\n          <form @submit.prevent=\"addBookToCart\">\r\n            <!-- removed drop down as it did not serve a purpose-->\r\n            <div class=\"form-group\">\r\n              <label for=\"quantity\">Quantity</label>\r\n              <input\r\n                  type=\"number\"\r\n                  id=\"quantity\"\r\n                  v-model=\"quantity\"\r\n                  min=\"1\"\r\n              />\r\n            </div>\r\n\r\n            <div class=\"form-action\">\r\n              <button type=\"submit\">Add to cart</button>\r\n            </div>\r\n          </form>\r\n          <!-- end of form-->\r\n\r\n          <div class=\"in-stock\">\r\n            <p>Availability: {{ comic.avilability }}</p>\r\n          </div>\r\n\r\n          <!-- Tabs section -->\r\n          <div class=\"product-tabs\">\r\n            <ul>\r\n              <li\r\n                  :class=\"{ active: activeTab === 'description' }\"\r\n                  @click=\"activeTab = 'description'\"\r\n              >\r\n                Description\r\n              </li>\r\n\r\n              <li\r\n                  :class=\"{ active: activeTab === 'details' }\"\r\n                  @click=\"activeTab = 'details'\"\r\n              >\r\n                Details\r\n              </li>\r\n\r\n              <li\r\n         